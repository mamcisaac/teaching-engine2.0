{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--experimental-specifier-resolution=node' tsx watch --ignore '.watchignore' src/index.ts",
    "start": "NODE_OPTIONS='--experimental-specifier-resolution=node' tsx src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.unit.config.js",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.integration.config.js",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' COVERAGE=true jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:parallel": "NODE_OPTIONS='--experimental-vm-modules' jest --maxWorkers=4",
    "test:serial": "NODE_OPTIONS='--experimental-vm-modules' jest --maxWorkers=1",
    "test:isolation": "NODE_OPTIONS='--experimental-vm-modules' jest src/__tests__/database-isolation.test.ts",
    "test:outcome": "NODE_OPTIONS='--experimental-vm-modules' jest src/__tests__/outcomeCoverage.integration.test.ts",
    "test:debug": "NODE_OPTIONS='--experimental-vm-modules' DEBUG_TESTS=true jest --verbose",
    "test:setup": "tsx scripts/setup-test-env.ts",
    "test:validate": "tsx scripts/validate-test-env.ts",
    "test:ci": "pnpm test:validate && NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --maxWorkers=2",
    "test:performance": "NODE_OPTIONS='--experimental-vm-modules' TEST_PERFORMANCE=true jest --maxWorkers=1",
    "test:flaky": "NODE_OPTIONS='--experimental-vm-modules' jest --testNamePattern='flaky' --maxWorkers=1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@teaching-engine/database": "workspace:*",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.1.1",
    "chart.js": "^4.5.0",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "debug": "^4.4.1",
    "express": "4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "html-to-docx": "^1.8.0",
    "isomorphic-dompurify": "^2.9.0",
    "json2csv": "6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.4",
    "node-cron": "^3.0.3",
    "node-ical": "^0.20.1",
    "nodemailer": "^6.9.11",
    "openai": "^5.3.0",
    "pdfkit": "^0.17.1",
    "pino": "8.21.0",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0",
    "validator": "^13.11.0",
    "zod": "3.25.58"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/html-to-docx": "^1.8.0",
    "@types/jest": "^29.5.14",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.0",
    "@types/node-cron": "^3.0.9",
    "@types/node-fetch": "^2.6.12",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.9",
    "@types/supertest": "^6.0.3",
    "@types/unzipper": "^0.10.7",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.11.7",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.0",
    "typescript": "^5.8.3"
  }
}
