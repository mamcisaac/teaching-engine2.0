{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--experimental-specifier-resolution=node' tsx watch src/index.ts",
    "start": "NODE_OPTIONS='--experimental-specifier-resolution=node' tsx src/index.ts",
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:outcome": "NODE_OPTIONS='--experimental-vm-modules' jest src/__tests__/outcomeCoverage.integration.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@teaching-engine/database": "workspace:*",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "debug": "^4.4.1",
    "express": "4.21.2",
    "handlebars": "^4.7.8",
    "html-to-docx": "^1.8.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.4",
    "node-cron": "^3.0.3",
    "node-ical": "^0.20.1",
    "nodemailer": "^6.9.11",
    "openai": "^5.3.0",
    "pdfkit": "^0.17.1",
    "pino": "8.21.0",
    "unzipper": "^0.12.3",
    "zod": "3.25.58"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)\\.js$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs|@prisma/client)/)"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/html-to-docx": "^1.8.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.0",
    "@types/node-cron": "^3.0.9",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.9",
    "@types/supertest": "^6.0.3",
    "@types/unzipper": "^0.10.7",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.0",
    "typescript": "^5.8.3"
  }
}
