{
  "name": "curriculum-planner",
  "packageManager": "pnpm@10.11.1",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "scripts",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm db:generate && concurrently -k --success first \"pnpm --filter server run dev\" \"pnpm --filter client run dev\"",
    "build": "pnpm db:generate && pnpm -r build",
    "test": "node scripts/smart-test-runner-enhanced.js",
    "test:watch": "node scripts/smart-test-runner-enhanced.js watch",
    "test:coverage": "node scripts/smart-test-runner-enhanced.js coverage",
    "test:debug": "node scripts/smart-test-runner-enhanced.js debug",
    "test:quick": "node scripts/smart-test-runner-enhanced.js quick",
    "test:fix": "node scripts/smart-test-runner-enhanced.js fix",
    "test:ci": "node scripts/smart-test-runner-enhanced.js all --coverage",
    "test:help": "node scripts/smart-test-runner-enhanced.js help",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ci": "playwright test --reporter=github",
    "test:e2e:smoke": "playwright test tests/e2e/smoke-simple.spec.ts",
    "lint": "eslint --config .eslintrc.json \"**/*.{ts,tsx,js,jsx}\"",
    "typecheck": "pnpm --filter client run typecheck && pnpm --filter server run typecheck",
    "prepare": "husky install",
    "db:generate": "pnpm --filter @teaching-engine/database db:generate",
    "db:migrate": "pnpm --filter @teaching-engine/database db:migrate",
    "db:push": "pnpm --filter @teaching-engine/database db:push",
    "db:deploy": "pnpm --filter @teaching-engine/database db:deploy",
    "db:studio": "pnpm --filter @teaching-engine/database db:studio",
    "db:seed": "NODE_OPTIONS='--import tsx' NODE_ENV=development node scripts/seed.ts",
    "db:seed:test": "NODE_OPTIONS='--import tsx' NODE_ENV=test node scripts/seed.ts",
    "postinstall": "pnpm --filter @teaching-engine/database db:generate",
    "setup:e2e:db": "tsx scripts/setup-e2e-db.ts",
    "check:docs": "pnpm --filter scripts run verify-docs",
    "analyze:bundle": "source-map-explorer 'client/dist/assets/index-*.js' --no-border-checks --html client/dist/bundle-report.html",
    "cleanup:legacy": "node scripts/cleanup-legacy-code.js",
    "cleanup:legacy:dry": "node scripts/cleanup-legacy-code.js --dry-run",
    "test:categorize": "node scripts/test-categorizer.js",
    "test:categorize:organize": "node scripts/test-categorizer.js --organize"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "pdf-parse": "^1.1.1",
    "prettier": "^3.0.0",
    "puppeteer": "^24.10.2",
    "source-map-explorer": "^2.5.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@types/bcryptjs": "^3.0.0",
    "@types/multer": "^1.4.13",
    "@upstash/context7-mcp": "^1.0.14",
    "bcryptjs": "^3.0.2",
    "date-fns": "^2.30.0",
    "franc": "^6.2.0",
    "luxon": "^3.6.1",
    "multer": "^2.0.1"
  }
}
