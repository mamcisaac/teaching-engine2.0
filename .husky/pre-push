#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
pnpm typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix type errors before pushing."
  exit 1
fi

# Run linting
echo "ğŸ” Running ESLint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix linting errors before pushing."
  exit 1
fi

# Run quick tests
echo "ğŸ§ª Running quick tests..."
pnpm test:quick
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before pushing."
  exit 1
fi

echo "âœ… Pre-push checks completed successfully!"